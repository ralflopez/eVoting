<div class="container h-100 mx-auto">
    <div class="row h-100">
        <div class="col-12 d-flex flex-column align-items-center justify-content-center">
            <div class="d-flex justify-content-center align-items-center flex-wrap mb-5">
                <img src="/img/vote-1.svg" alt="evoting" id="primary-img"/>
                <div class="title-container">
                    <img src="/img/star.svg" alt="*" class="star"/>
                    <h1>eVoting</h1>
                </div>
            </div>
            <form class="form-container" method="POST" action="/login">
                {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                {{/if}}
                <h5 class="mb-3">Sign Up</h5>
                <div class="form-group">
                    {{!-- <label for="name">Name</label> --}}
                    <input type="text" class="form-control" id="name" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    {{!-- <label for="email">Email</label> --}}
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                </div>
                <div class="form-group">
                    {{!-- <label for="password">Password</label> --}}
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>
                <a class="btn btn-link p-0 mb-2 mr-2" href="/login">I already have an account</a>
                <button class="btn btn-primary ml-auto">Login</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/login_jq.js"></script>